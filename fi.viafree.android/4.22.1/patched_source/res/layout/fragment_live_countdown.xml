<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/black" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/live_countdown_image" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    <FrameLayout android:background="#88000000" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:textAppearance="@style/player_live_text" android:gravity="center" android:id="@id/live_countdown_video_title" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <TextView android:textAppearance="@style/player_live_secondary" android:textColor="@color/white75" android:gravity="center" android:id="@id/live_countdown_video_combined_title" android:paddingBottom="@dimen/default_horizontal_spacing_extra_extra_large" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_spacing_medium" android:fontFamily="@font/mtg_sans_regular" />
        <TextView android:textAppearance="@style/player_live_secondary" android:gravity="center_horizontal" android:id="@id/live_countdown_header" android:padding="@dimen/default_spacing" android:layout_width="fill_parent" android:layout_height="wrap_content" android:fontFamily="@font/mtg_sans_bold" />
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:padding="@dimen/default_spacing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:weightSum="4.0">
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0">
                <TextView android:textAppearance="@style/player_live_secondary" android:gravity="center" android:id="@id/days_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/videoplayer_countdown_days" android:layout_centerHorizontal="true" android:paddingStart="@dimen/default_spacing" android:paddingEnd="@dimen/default_spacing" />
                <TextView android:textAppearance="@style/player_live_text" android:gravity="center" android:id="@id/days_values" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_spacing_large" android:layout_below="@id/days_label" android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <TextView android:textAppearance="@style/player_live_text" android:layout_gravity="bottom|center" android:id="@id/sep_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/time_sep" />
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0">
                <TextView android:textAppearance="@style/player_live_secondary" android:gravity="center" android:id="@id/hours_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/videoplayer_countdown_hours" android:paddingStart="@dimen/default_spacing" android:paddingEnd="@dimen/default_spacing" />
                <TextView android:textAppearance="@style/player_live_text" android:gravity="center" android:id="@id/hours_values" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_spacing_large" android:layout_below="@id/hours_label" android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <TextView android:textAppearance="@style/player_live_text" android:layout_gravity="bottom|center" android:id="@id/sep_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/time_sep" />
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0">
                <TextView android:textAppearance="@style/player_live_secondary" android:gravity="center" android:id="@id/minutes_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/videoplayer_countdown_minutes" android:paddingStart="@dimen/default_spacing" android:paddingEnd="@dimen/default_spacing" />
                <TextView android:textAppearance="@style/player_live_text" android:gravity="center" android:id="@id/minutes_values" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_spacing_large" android:layout_below="@id/minutes_label" android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <TextView android:textAppearance="@style/player_live_text" android:layout_gravity="bottom|center" android:id="@id/sep_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/time_sep" />
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0">
                <TextView android:textAppearance="@style/player_live_secondary" android:gravity="center" android:id="@id/seconds_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/videoplayer_countdown_seconds" android:paddingStart="@dimen/default_spacing" android:paddingEnd="@dimen/default_spacing" />
                <TextView android:textAppearance="@style/player_live_text" android:gravity="center" android:id="@id/seconds_values" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_spacing_large" android:layout_below="@id/seconds_label" android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>