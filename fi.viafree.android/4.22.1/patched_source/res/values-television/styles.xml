<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PushNextButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:strokeColor">@color/mtl_btn_bg_selector</item>
        <item name="backgroundTint">@color/neworange</item>
        <item name="cornerRadius">25.0dip</item>
        <item name="fontFamily">@font/mtg_sans_bold</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="strokeWidth">2.0dip</item>
    </style>
    <style name="PushNextCloseButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:strokeColor">@color/mtl_btn_bg_selector_transparent</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="cornerRadius">25.0dip</item>
        <item name="fontFamily">@font/mtg_sans_bold</item>
        <item name="rippleColor">@color/transparent</item>
    </style>
</resources>
